@model PhotoShortViewModel
<div class="row">
    <div class="col-md-6">
        <a href="@Url.Action("ViewPhoto", "Photo",
                            new { uniqueUserName = Model.UniqueUserName, photoName = Model.PhotoName })">
            <img class="img-thumbnail" height="100"
                 src="@Html.GetImageSource(Model.ImageData,Model.ImageMimeType)" />
        </a>
        <p>Photo called "@Model.PhotoName" created by @Model.UniqueUserName</p>
    </div>
</div>
