@model EditPhotoViewModel
@{
    ViewBag.Title = "EditPhotoPage";
}

<h2>Edit Photo</h2>

<div class="container">
    <div class="col-md-12">
        <div class="row">
            @using (Html.BeginForm("UpdatePhoto", "Photo", new { photoName = Model.PhotoName, uniqueUserName = Model.UniqueUserName }, FormMethod.Get))
            {
                <input type="submit" value="Update" class="btn btn-default col-md-4" />
            }
        </div>
        <div class="row">
            @Html.Partial("RemovePhoto", new RemovePhotoViewModel
               {
                   PhotoName = Model.PhotoName,
                   UniqueUserName = Model.UniqueUserName
               })
        </div>
        <div class="row">
            @using (Html.BeginForm("AddToAlbum", "Photo", FormMethod.Get))
            {
                <input type="hidden" name="photoName" value="@Model.PhotoName" />
                <input type="hidden" name="uniqueUserName" value="@Model.UniqueUserName" />
                <input type="submit" value="Add To Album" class="btn btn-default col-md-4" />
            }
        </div>
    </div>
</div>
